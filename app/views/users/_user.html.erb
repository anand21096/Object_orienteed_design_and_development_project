<div id="<%= dom_id user %>">
  <p>
    <strong>User Type: </strong>
     <% if user.identifier == "1" %>
    Student
    <% end %>
    <% if user.identifier == "2" %>
    Instructor
    <% end %>
    <% if user.identifier == "0" %>
    Admin
    <% end %>
  </p>
  <p>
    <strong>User ID:</strong>
    <%= user.id %>
  </p><p>
    <strong>User Name:</strong>
    <%= user.username %>
  </p>
  <p>
    <strong>Email ID:</strong>
    <%= user.email_id %>
  </p>
  <% if user.identifier == "1" %>
  <p>
    <strong>Phone No:</strong>
    <%= user.phone_no %>
  </p>
  <% end %>
  <% if user.identifier == "1" %>
  <p>
    <strong>Date Of Bith:</strong>
    <%= user.date_of_birth %>
  </p>
  <% end %>
  <% if user.identifier == "1" %>
  <p>
    <strong>Major:</strong>
    <%= user.major %>
  </p>
  <% end %>
  <% if user.identifier == "2" %>
  <p>
    <strong>Department:</strong>
    <%= user.department %>
  </p>
  <% end %>
</div>
